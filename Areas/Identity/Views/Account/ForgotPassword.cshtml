@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
     Layout = "_LoginAccount.cshtml";
}


  <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">bạn quyên mật khẩu</h1>
                                        <p class="mb-4">hãy nhập địa chỉ email để lấy lại tài khoản</p>
                                    </div>
                                    <form   method="post" class="user">
                                         <div asp-validation-summary="All" class="text-danger"></div>                                 
                                        <div class="form-group">
                <input asp-for="Email" class="form-control form-control-user" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block">Gửi</button>
                                    </form>







                                    <hr>
                                 <div class="text-center">
                                
                                <a class="small" asp-action="ForgotPassword">Quyên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                 <a  class="small"asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">đăng ký tài khoản mới</a>
                            </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>















@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
