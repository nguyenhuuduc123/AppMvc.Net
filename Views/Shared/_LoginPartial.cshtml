@using Microsoft.AspNetCore.Identity
@using  razorweb.models
@using App.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right ">
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Identity"  asp-controller="Manage" asp-action="Index" title="Manage"><i class="fa-solid fa-user"></i> @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button title="đăng xuất" type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa-solid fa-arrow-right-from-bracket"></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a title="đăng ký" class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-address-card"></i></a>
        </li>
        <li class="nav-item">
            <a title="đăng nhập" class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
        </li>
    </ul>
}